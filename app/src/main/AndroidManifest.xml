<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jmgarzo.dublinbus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--<meta-data-->
            <!--android:name="com.google.android.geo.API_KEY"-->
            <!--android:value="AIzaSyCka2ilkSUUXDnvn9fPByCqGfGfgPV0u_Y" />-->

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.DublinBusProvider"
            android:authorities="@string/content_authority"
            android:exported="false" />

        <service
            android:name=".sync.services.RealTimeStopService"
            android:exported="false" />
        <service
            android:name=".sync.services.TimeTableBusInformationService"
            android:exported="false" />
        <service
            android:name=".sync.services.FullTimetableBusInformationService"
            android:exported="false" />
        <service
            android:name=".sync.services.BusStopInformationService"
            android:exported="false" />
        <service
            android:name=".sync.services.RouteInformationService"
            android:exported="false" />
        <service
            android:name=".sync.services.OperatorInformationService"
            android:exported="false" />
        <service
            android:name=".sync.services.RouteListInformationService"
            android:exported="false" />

        <activity
            android:name=".RouteActivity"
            android:label="@string/title_activity_route"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RouteDetailActivity"
            android:label="@string/title_activity_route_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RealTimeStopActivity"
            android:parentActivityName=".BusStopActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jmgarzo.dublinbus.BusStopActivity" />
            </activity>
        <activity android:name=".StopsNearActivity" />
        <activity
            android:name=".BusStopActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jmgarzo.dublinbus.MainActivity" />
        </activity>


        <service android:name=".sync.RealTimeJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>
    </application>

</manifest>
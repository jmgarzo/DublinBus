<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jmgarzo.dublinbus">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".sync.RealTimeBusInformationService"
            android:exported="false"/>

        <service
            android:name=".sync.TimeTableBusInformationService"
            android:exported="false"/>

        <service
            android:name=".sync.FullTimetableBusInformationService"
            android:exported="false"/>

        <service
            android:name=".sync.BusStopInformationService"
            android:exported="false"/>

        <service
            android:name=".sync.RouteInformationService"
            android:exported="false"/>

        <service
            android:name=".sync.OperatorInformationService"
            android:exported="false"/>

        <service
            android:name=".sync.RouteListInformationService"
            android:exported="false"/>
    </application>

</manifest>
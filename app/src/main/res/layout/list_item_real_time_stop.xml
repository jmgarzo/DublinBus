<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/list_item_real_time_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_real_time_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/route_name_style"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_real_time_image"
        app:layout_constraintLeft_toLeftOf="@+id/list_item_real_time_image"
        app:layout_constraintRight_toRightOf="@+id/list_item_real_time_image"
        app:layout_constraintTop_toTopOf="@+id/list_item_real_time_image"
        tools:text="39A" />

    <TextView
        android:id="@+id/list_item_real_time_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintLeft_toRightOf="@+id/list_item_real_time_minutes_label"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        tools:text="Mountjoy Square" />

    <TextView
        android:id="@+id/list_item_real_time_due_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/list_item_real_time_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        tools:text="3" />

    <TextView
        android:id="@+id/list_item_real_time_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toRightOf="@+id/list_item_real_time_minutes_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Brides Glen" />


    <TextView
        android:id="@+id/list_item_real_time_minutes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/real_time_stop_minutes_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_real_time_due_time"
        app:layout_constraintLeft_toRightOf="@+id/list_item_real_time_due_time"
        app:layout_constraintTop_toTopOf="@+id/list_item_real_time_due_time"
        app:layout_constraintVertical_bias="0.625" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

</android.support.constraint.ConstraintLayout>


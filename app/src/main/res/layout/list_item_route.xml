<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/list_item_route_image_name_background"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_route_name"
        style="@style/route_name_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_route_image_name_background"
        app:layout_constraintLeft_toLeftOf="@+id/list_item_route_image_name_background"
        app:layout_constraintRight_toRightOf="@+id/list_item_route_image_name_background"
        app:layout_constraintTop_toTopOf="@+id/list_item_route_image_name_background" />


    <TextView
        android:id="@+id/list_item_route_origin"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="origin"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintLeft_toRightOf="@+id/list_item_route_image_name_background"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/list_item_route_destination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="destination"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:layout_marginTop="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/list_item_route_image_name_background" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="24dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.59444445" />


</android.support.constraint.ConstraintLayout>
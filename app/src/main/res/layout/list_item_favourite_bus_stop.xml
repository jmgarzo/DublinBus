<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:paddingTop="0dp">


    <ImageView
        android:id="@+id/list_item_bus_stop_imageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/yellow_a700_circle_480x480"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:id="@+id/list_item_bus_stop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:fontFamily="serif"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_bus_stop_imageview"
        app:layout_constraintLeft_toLeftOf="@+id/list_item_bus_stop_imageview"
        app:layout_constraintRight_toRightOf="@+id/list_item_bus_stop_imageview"
        app:layout_constraintTop_toTopOf="@+id/list_item_bus_stop_imageview"
        tools:text="67" />

    <TextView
        android:id="@+id/list_item_bus_stop_short_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        tools:text="Parnell"
        app:layout_constraintLeft_toRightOf="@+id/list_item_bus_stop_imageview"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/list_item_bus_stop_imageview"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_bus_stop_imageview"
        android:layout_marginBottom="0dp" />


</android.support.constraint.ConstraintLayout>


